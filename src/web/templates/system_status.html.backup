<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>System Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="table-responsive"><div class="table-responsive"><table class="table table-sm">
                            <tr>
                                <td><strong>Application Version:</strong></td>
                                <td>{{ app_version or "1.0.0" }}</td>
                            </tr>
                            <tr>
                                <td><strong>Python Version:</strong></td>
                                <td id="python-version">--</td>
                            </tr>
                            <tr>
