                                <td id="uptime">--</td>
                            </tr>
                        </table></div></div></div></div></div></div></div></div></div></div></div></div></div></div></div></div></div>
                    </div>
                    <div class="col-md-6">
                        <div class="table-responsive"><div class="table-responsive"><table class="table table-sm">
                            <tr>
                                <td><strong>Total Requests:</strong></td>
                                <td id="total-requests">--</td>
                            </tr>
                            <tr>
                                <td><strong>Active Connections:</strong></td>
                                <td id="active-connections">--</td>
                            </tr>
                            <tr>
                                <td><strong>Last Health Check:</strong></td>
                                <td id="last-health-check">Just now</td>
                            </tr>
                            <tr>
                                <td><strong>Configuration:</strong></td>
                                <td><span class="badge bg-info">Development</span></td>
                            </tr>
                        </table></div></div></div></div></div></div></div></div></div></div></div></div></div></div></div></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
function refreshStatus() {
    // Simulate refreshing system status
    document.getElementById('last-health-check').textContent = new Date().toLocaleTimeString();
    RSApp.showMessage('System status refreshed', 'success');
    
    // Load basic system info
    loadSystemInfo();
}

function loadSystemInfo() {
    // Set some basic system information
    document.getElementById('python-version').textContent = '3.11+';
    document.getElementById('platform').textContent = 'Windows';
    document.getElementById('uptime').textContent = calculateUptime();
    document.getElementById('total-requests').textContent = Math.floor(Math.random() * 1000) + ' requests';
    document.getElementById('active-connections').textContent = Math.floor(Math.random() * 10) + 1;
    document.getElementById('memory-usage').textContent = Math.floor(Math.random() * 50 + 30) + 'MB';
    document.getElementById('cpu-usage').textContent = Math.floor(Math.random() * 20 + 5) + '%';
}

function calculateUptime() {
    // Simple uptime calculation (this is just for display)
    const start = new Date().getTime() - (Math.random() * 3600000); // Random hour
    const uptime = new Date().getTime() - start;
    const hours = Math.floor(uptime / 3600000);
    const minutes = Math.floor((uptime % 3600000) / 60000);
    return `${hours}h ${minutes}m`;
}

// Load initial system info
loadSystemInfo();

// Auto-refresh every 30 seconds
setInterval(loadSystemInfo, 30000);
</script>
{% endblock %}